<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#0791C6" />
            <stroke
                android:width="1dp"
                android:color="#20419B" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="@dimen/togglePadding"
                android:top="@dimen/togglePadding"
                android:right="@dimen/togglePadding"
                android:bottom="@dimen/togglePadding" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape>
            <solid
                android:color="#0791C6" />
            <stroke
                android:width="1dp"
                android:color="#20419B" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="@dimen/togglePadding"
                android:top="@dimen/togglePadding"
                android:right="@dimen/togglePadding"
                android:bottom="@dimen/togglePadding" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#D1D3D4"
                android:endColor="#A7A9AC"
                android:angle="270" />
            <stroke
                android:width="1.5dp"
                android:color="#FFF" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="@dimen/togglePadding"
                android:top="@dimen/togglePadding"
                android:right="@dimen/togglePadding"
                android:bottom="@dimen/togglePadding" />
        </shape>
    </item>
</selector>